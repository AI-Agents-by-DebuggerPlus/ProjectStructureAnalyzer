<Window x:Class="ProjectStructureAnalyzer.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:local="clr-namespace:ProjectStructureAnalyzer"
        Title="Project Structure Analyzer"
        Width="800" Height="600"
        MinWidth="600" MinHeight="400"
        WindowStyle="None"
        AllowsTransparency="True"
        Background="Transparent">

    <Window.Resources>
        <local:DirectoryToIconConverter x:Key="DirectoryToIconConverter" />
    </Window.Resources>

    <Border Background="{DynamicResource WindowBackgroundBrush}" CornerRadius="4" BorderThickness="1" BorderBrush="{DynamicResource ControlBorderBrush}">
        <DockPanel>

            <!-- Title Bar -->
            <Grid DockPanel.Dock="Top" Height="32" Background="{DynamicResource ControlBackgroundBrush}" MouseDown="TitleBar_MouseDown">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="Auto" />
                </Grid.ColumnDefinitions>

                <!-- Иконка и заголовок -->
                <StackPanel Orientation="Horizontal" VerticalAlignment="Center" Margin="8,0,0,0">
                    <Image Source="/ProjectStructureAnalyzer;component/Images/folder.png" Width="16" Height="16" Margin="0,0,8,0"/>
                    <TextBlock Text="Project Structure Analyzer" FontWeight="Bold" FontSize="14" Foreground="{DynamicResource TextBrush}" VerticalAlignment="Center"/>
                </StackPanel>

                <!-- Кнопки управления окном -->
                <StackPanel Grid.Column="1" Orientation="Horizontal" VerticalAlignment="Center">
                    <Button Content="🗕" Width="32" Height="32" Click="Minimize_Click" Style="{StaticResource TitleBarButtonStyle}" />
                    <Button Content="🗖" Width="32" Height="32" Click="MaximizeRestore_Click" Style="{StaticResource TitleBarButtonStyle}" />
                    <Button Content="✕" Width="32" Height="32" Click="Close_Click" Style="{StaticResource TitleBarButtonStyle}" Foreground="Red"/>
                </StackPanel>
            </Grid>

            <!-- Основное содержимое окна -->
            <Grid Margin="10">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="2*" />
                </Grid.ColumnDefinitions>

                <StackPanel Grid.Column="0" Margin="0,0,10,0">
                    <Button x:Name="SelectFolderButton" Content="Выбрать папку" Click="SelectFolderButton_Click" Width="150" Margin="0,0,0,10"/>
                    <Button x:Name="AnalyzeButton" Content="Анализировать" Click="AnalyzeButton_Click" Width="150" IsEnabled="False" Margin="0,0,0,10"/>
                    <Button x:Name="ExportButton" Content="Экспортировать" Click="ExportButton_Click" Width="150" IsEnabled="False" Margin="0,0,0,10"/>
                    <Button x:Name="SettingsButton" Content="Настройки" Click="SettingsButton_Click" Width="150" Margin="0,0,0,10"/>
                    <TextBlock x:Name="StatusText" Text="Выберите папку для анализа." Margin="0,10,0,10"/>
                    <TextBlock Text="Статистика:" FontWeight="Bold" Margin="0,10,0,5"/>
                    <StackPanel>
                        <TextBlock Text="Всего папок:"/>
                        <TextBlock x:Name="FolderCountText" Text="0"/>
                        <TextBlock Text="Всего файлов:"/>
                        <TextBlock x:Name="FileCountText" Text="0"/>
                    </StackPanel>
                    <TextBlock x:Name="ExportStatusText" 
           Foreground="Green" 
           Visibility="Visible"
           TextWrapping="Wrap" />
                </StackPanel>

                <TreeView x:Name="ProjectTreeView" Grid.Column="1" 
                          ItemContainerStyle="{StaticResource TreeViewItemStyle}" 
                          SelectedItemChanged="TreeViewItem_Selected">
                    <TreeView.Resources>
                        <HierarchicalDataTemplate DataType="{x:Type local:ProjectItem}" ItemsSource="{Binding Children}">
                            <StackPanel Orientation="Horizontal">
                                <TextBlock Text="{Binding IsDirectory, Converter={StaticResource DirectoryToIconConverter}}" 
                                           Margin="0,0,5,0" VerticalAlignment="Center"/>
                                <TextBlock Text="{Binding Name}" VerticalAlignment="Center"/>
                            </StackPanel>
                        </HierarchicalDataTemplate>
                    </TreeView.Resources>
                </TreeView>
            </Grid>

        </DockPanel>
    </Border>
</Window>
