<Window x:Class="ProjectStructureAnalyzer.SettingsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Настройки" Height="300" Width="382.47">
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        <TextBlock Grid.Row="0" Text="Исключить из анализа следующие папки и файлы:" FontWeight="Bold" Margin="0,0,0,10"/>
        <StackPanel Grid.Row="1">
            <CheckBox x:Name="FolderSrcCheckBox" Content="src" Margin="0,0,0,5"/>
            <CheckBox x:Name="FolderBinCheckBox" Content="bin" Margin="0,0,0,5"/>
            <CheckBox x:Name="FolderObjCheckBox" Content="obj" Margin="0,0,0,5"/>
            <CheckBox x:Name="FolderPropertiesCheckBox" Content="Properties" Margin="0,0,0,5"/>
            <TextBlock Text="Файлы:" Margin="0,10,0,5" FontWeight="Bold"/>
            <CheckBox x:Name="FileCsCheckBox" Content=".cs" Margin="0,0,0,5"/>
            <CheckBox x:Name="FileSlnCheckBox" Content=".sln" Margin="0,0,0,5"/>
            <CheckBox x:Name="FileCsprojCheckBox" Content=".csproj" Margin="0,0,0,5"/>
            <CheckBox x:Name="FileConfigCheckBox" Content=".config" Margin="0,0,0,5"/>
        </StackPanel>
        <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Right">
            <Button x:Name="SaveButton" Content="Сохранить" Click="SaveButton_Click" Width="75" Margin="0,0,10,0"/>
            <Button x:Name="CancelButton" Content="Отмена" Click="CancelButton_Click" Width="75"/>
        </StackPanel>
    </Grid>
</Window>