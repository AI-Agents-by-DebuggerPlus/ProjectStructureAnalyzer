<Window x:Class="ProjectStructureAnalyzer.SettingsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Width="382"
        WindowStyle="None" 
        AllowsTransparency="True" 
        Background="Transparent" 
        WindowStartupLocation="CenterOwner"
        SizeToContent="Height">

    <Border Background="{StaticResource WindowBackgroundBrush}"
            BorderBrush="{StaticResource ControlBorderBrush}"
            BorderThickness="1"
            CornerRadius="8">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <Grid Grid.Row="0" Height="40" Background="Transparent" MouseDown="TitleBar_MouseDown">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <TextBlock Text="Настройки"
                           Grid.Column="0"
                           Foreground="{StaticResource TextBrush}" 
                           FontSize="16"
                           Margin="15,0,0,0"
                           VerticalAlignment="Center"/>

                <Button x:Name="CloseButton" 
                        Grid.Column="1"
                        Content="✕" 
                        Style="{StaticResource TitleBarButtonStyle}"
                        Width="40"
                        Click="CloseButton_Click" 
                        VerticalAlignment="Top"/>
            </Grid>

            <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto">
                <StackPanel Margin="15,10">
                    <TextBlock Text="Исключить из анализа следующие папки и файлы:" FontWeight="Bold" Margin="0,0,0,10"/>
                    <CheckBox x:Name="FolderSrcCheckBox" Content="src" Margin="0,0,0,5"/>
                    <CheckBox x:Name="FolderBinCheckBox" Content="bin" Margin="0,0,0,5"/>
                    <CheckBox x:Name="FolderObjCheckBox" Content="obj" Margin="0,0,0,5"/>
                    <CheckBox x:Name="FolderPropertiesCheckBox" Content="Properties" Margin="0,0,0,5"/>

                    <TextBlock Text="Файлы:" Margin="0,10,0,5" FontWeight="Bold"/>
                    <CheckBox x:Name="FileCsCheckBox" Content=".cs" Margin="0,0,0,5"/>
                    <CheckBox x:Name="FileSlnCheckBox" Content=".sln" Margin="0,0,0,5"/>
                    <CheckBox x:Name="FileCsprojCheckBox" Content=".csproj" Margin="0,0,0,5"/>
                    <CheckBox x:Name="FileConfigCheckBox" Content=".config" Margin="0,0,0,5"/>

                    <TextBlock Text="Шрифт приложения:" Margin="0,15,0,5" FontWeight="Bold"/>
                    <ComboBox x:Name="FontComboBox" 
                              Margin="0,0,0,5"
                              ItemContainerStyle="{StaticResource DarkComboBoxItemStyle}">
                        <ComboBox.ItemTemplate>
                            <DataTemplate>
                                <TextBlock Text="{Binding Source}" 
                                           FontFamily="{Binding}"
                                           FontSize="14"
                                           Foreground="{Binding Path=Foreground, RelativeSource={RelativeSource AncestorType=ComboBoxItem}}"/>
                            </DataTemplate>
                        </ComboBox.ItemTemplate>
                    </ComboBox>
                </StackPanel>
            </ScrollViewer>

            <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,15,15,15">
                <Button x:Name="SaveButton" Content="Сохранить" Click="SaveButton_Click" Width="85" Margin="0,0,10,0"/>
                <Button x:Name="CancelButton" Content="Отмена" Click="CancelButton_Click" Width="85"/>
            </StackPanel>
        </Grid>
    </Border>
</Window>