<Window x:Class="ProjectStructureAnalyzer.SettingsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Width="450"
        WindowStyle="None" 
        AllowsTransparency="True" 
        Background="Transparent" 
        WindowStartupLocation="CenterOwner"
        SizeToContent="Height">

    <Border Background="{DynamicResource WindowBackgroundBrush}"
            BorderBrush="{DynamicResource ControlBorderBrush}"
            BorderThickness="1"
            CornerRadius="8">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <Grid Grid.Row="0" Height="40" Background="Transparent" MouseDown="TitleBar_MouseDown">
                <TextBlock Text="Настройки"
                           FontSize="16"
                           Margin="15,0,0,0"
                           VerticalAlignment="Center"
                           Foreground="{DynamicResource TextBrush}"/>

                <Button x:Name="CloseButton" 
                        Content="✕" 
                        Style="{DynamicResource TitleBarButtonStyle}"
                        Width="40"
                        Click="CloseButton_Click" 
                        VerticalAlignment="Top"
                        HorizontalAlignment="Right"/>
            </Grid>

            <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto">
                <StackPanel Margin="15,10">
                    <TextBlock Text="Исключить из анализа следующие папки и файлы:" FontWeight="Bold" Margin="0,0,0,10"/>
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        <StackPanel Grid.Column="0">
                            <TextBlock Text="Папки:" Margin="0,0,0,5"/>
                            <CheckBox x:Name="FolderSrcCheckBox" Content="src" Margin="5,0,0,5"/>
                            <CheckBox x:Name="FolderBinCheckBox" Content="bin" Margin="5,0,0,5"/>
                            <CheckBox x:Name="FolderObjCheckBox" Content="obj" Margin="5,0,0,5"/>
                            <CheckBox x:Name="FolderPropertiesCheckBox" Content="Properties" Margin="5,0,0,5"/>
                        </StackPanel>
                        <StackPanel Grid.Column="1">
                            <TextBlock Text="Файлы:" Margin="0,0,0,5"/>
                            <CheckBox x:Name="FileCsCheckBox" Content=".cs" Margin="5,0,0,5"/>
                            <CheckBox x:Name="FileSlnCheckBox" Content=".sln" Margin="5,0,0,5"/>
                            <CheckBox x:Name="FileCsprojCheckBox" Content=".csproj" Margin="5,0,0,5"/>
                            <CheckBox x:Name="FileConfigCheckBox" Content=".config" Margin="5,0,0,5"/>
                        </StackPanel>
                    </Grid>

                    <TextBlock Text="Настройки шрифта" FontWeight="Bold" Margin="0,20,0,10"/>
                    <Border BorderBrush="{DynamicResource ControlBorderBrush}" 
                            BorderThickness="1" 
                            CornerRadius="4" 
                            Margin="0,0,0,10"
                            Padding="10">
                        <TextBlock x:Name="PreviewTextBlock"
                                   Text="Пример текста. Sample text. 123"
                                   TextWrapping="Wrap"/>
                    </Border>

                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>

                        <TextBlock Grid.Row="0" Grid.Column="0" Text="Шрифт приложения:" VerticalAlignment="Center" Margin="0,5,10,5"/>

                        <ComboBox x:Name="FontComboBox"
                                  Grid.Row="0" Grid.Column="1"
                                  Margin="0,5,0,10"
                                  SelectionChanged="PreviewSettingsChanged">
                            <ComboBox.Resources>
                                <Style TargetType="ComboBoxItem">
                                    <Setter Property="Background" Value="White"/>
                                    <Setter Property="Foreground" Value="Black"/>
                                    <Style.Triggers>
                                        <Trigger Property="IsMouseOver" Value="True">
                                            <Setter Property="Background" Value="#FFE0E0E0"/>
                                        </Trigger>
                                        <Trigger Property="IsSelected" Value="True">
                                            <Setter Property="Background" Value="#FFD0D0D0"/>
                                        </Trigger>
                                    </Style.Triggers>
                                </Style>
                            </ComboBox.Resources>
                            <ComboBox.ItemTemplate>
                                <DataTemplate>
                                    <TextBlock Text="{Binding Source}" 
                                               FontFamily="{Binding}"
                                               FontSize="14"
                                               Foreground="{Binding Path=Foreground, RelativeSource={RelativeSource AncestorType=ComboBoxItem}}"/>
                                </DataTemplate>
                            </ComboBox.ItemTemplate>
                        </ComboBox>

                        <TextBlock Grid.Row="1" Grid.Column="0" Text="Размер шрифта:" VerticalAlignment="Center" Margin="0,5,10,5"/>
                        <Slider x:Name="FontSizeSlider" 
                                Grid.Row="1" Grid.Column="1"
                                Minimum="10" Maximum="24"
                                Value="13"
                                TickFrequency="1"
                                IsSnapToTickEnabled="True"
                                ValueChanged="PreviewSettingsChanged"
                                VerticalAlignment="Center"/>
                    </Grid>
                </StackPanel>
            </ScrollViewer>

            <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,15,15,15">
                <Button x:Name="SaveButton" Content="Сохранить" Click="SaveButton_Click" Width="85" Margin="0,0,10,0"/>
                <Button x:Name="CancelButton" Content="Отмена" Click="CancelButton_Click" Width="85"/>
            </StackPanel>
        </Grid>
    </Border>
</Window>